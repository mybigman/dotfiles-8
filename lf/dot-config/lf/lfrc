set icons

cmd fzf_jump ${{
	res="$(find . -mindepth 1 -maxdepth 1 -printf "%f\n" | fzf --reverse --header='Jump to location')"
	if [ -f "${res}" ]; then
		cmd="select"
	elif [ -d "${res}" ]; then
		cmd="cd"
	fi
	lf -remote "send ${id} ${cmd} \"${res}\""
}}
map <c-f> :fzf_jump

map o $~/.config/lf/draw_img.sh $f

cmd video_preview ${{
	CACHE=$(mktemp /tmp/thumb_cache.XXXXX)
	ffmpegthumbnailer -i "$f" -o $CACHE -s 0
	~/.config/lf/draw_img.sh $CACHE && rm $CACHE
}}
map + :video_preview
